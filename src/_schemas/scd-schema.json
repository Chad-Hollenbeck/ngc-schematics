{
  "$schema": "http://json-schema.org/schema",
  "id": "ngcModule",
  "title": "NGC Module",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "isSCD": {
      "type": "boolean",
      "description" : "Use slowly changing dimensions?",
      "x-prompt" : "SCD will replace create/update dates with start/end date fields"
    }
  },
  "required": [
    "name",
    "isSCD"
  ]
}
