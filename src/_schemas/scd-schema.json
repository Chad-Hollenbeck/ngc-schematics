{
  "$schema": "http://json-schema.org/schema",
  "id": "ngcModule",
  "title": "NGC Module",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "dates": {
      "x-prompt": "Track update dates?",
      "description": "SCD will replace create/update dates with start/end date fields",
      "type": "array",
      "items": [
        {
          "value": "scd",
          "label": "Slowly Changing Dimensions"
        },
        {
          "value": "crud",
          "label": "Create & Update"
        },
        {
          "value": "none",
          "label": "None"
        }
      ]
    }
  },
  "required": [
    "name",
    "dates"
  ]
}
