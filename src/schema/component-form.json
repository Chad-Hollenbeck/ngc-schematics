{
  "$schema": "http://json-schema.org/schema",
  "id": "firestore-service-schema",
  "title": "Firestore Service Schema",
  "type": "object",
  "properties": {
    "moduleName": {
      "type": "string",
      "x-prompt": "Module Name"
    },
    "fileName": {
      "type": "string",
      "x-prompt": "Component|Service Name"
    },
    "modelName": {
      "type": "string",
      "x-prompt": "Model Name"
    },
    "useFirebase": {
      "type": "boolean",
      "x-prompt": "Use firebase service functions?"
    },
    "serviceName": {
      "type": "string",
      "x-prompt": "Service Name"
    },
    "useCard": {
      "type": "boolean",
      "x-prompt": "Use card html format?"
    }
  },
  "required": [
    "moduleName",
    "fileName",
    "serviceName",
    "useCard",
    "useFirebase"
  ]
}
